# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/concept					controllers.ConceptController.allConcepts()
PUT		/concept					controllers.ConceptController.insert()
GET		/concept/:id				controllers.ConceptController.byId(id:Long)
GET 	/concept					controllers.ConceptController.concepts(name:String,id:Long)
DELETE	/concept/:id				controllers.ConceptController.delete(id:Long)

GET     /entity						controllers.EntityController.allEntities()
PUT		/entity/					controllers.EntityController.insert()
GET		/entity/:id					controllers.EntityController.getById(id:Long)
DELETE  /entity/:id                 controllers.EntityController.delete(id:Long)

POST   /observe						controllers.ObservationController.map(text:String)
POST   /observe/entities			controllers.ObservationController.entities(text:String)
POST   /observe/concepts			controllers.ObservationController.concepts(text:String)